
<nav class='nav-extended'>
        <div class='nav-wrapper green lighten-2'>
            <div class='row'>
                <div class='col s12'>
                    <h6 class='nav-title font center-align'><img class='logo' src='/images/nature.png' alt='title logo plant'>   How's It Growing?</h6>
                    <ul id='nav-mobile' class='right'>
                        <li><a href='#'>logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    
    <div class='container font'>
        <div class='row'>
            <div class='col l1 hide-on-med-and-down'>

            </div>
            <div class='col l5 s6'>
                <div class='section'></div>
                <div class='section'></div>
               
                <h6>Hello {{user}}, how's it growing?</h6>
                
                <br>
                <h6>Time to check on those plants!</p>
            </div>
            <div class='col l5 s6'>
                <form action='#'>
                <div class='row'>
                    <div class='input-field'>
                        <input id='plant-name' type='text' class='validate'>
                        <label class='active' for='plant-name'>Plant Type</label>
                    </div>
                </div>
                <div class='row'>
                    <div class='input-field'>
                        <input id='nick-name' type='text' class='validate'>
                        <label class='active' for='nick-name'>Nickname</label>
                    </div>
                </div>
                <button class='btn green darken-2 waves-effect waves-light' type='submit' name='action'>Add Plant<i class='material-icons right'>spa</i></button>
                </form>
            </div>
            <div class='col l1 hide-on-med-and-down'>
                
            </div>
        </div>
    </div>

    <div class='container font'>
        <div class='row'>

                    <div class='card'>
                        <div class='card-content center'>
                            <h5>My Plants</h5>
                        </div>
                        <div class='card-tabs'>
                            <ul class='tabs z-depth-1 tabs-fixed-width'>
                                {{#each plant}}
                                <li class='tab'><a class='active' href='#{{this.dataValues.nickName}}'>{{this.dataValues.nickName}}</a></li>
                                {{/each}}
                            </ul>
                        </div>
                        <div class='card-content grey lighten-4'>
                          <div class='row'>
                            <div class='col s6'>
                              <ul>
                                  {{#each plant}}
                                  <div id='{{this.dataValues.nickName}}'>                              
                                      <p>Plant Type: {{this.dataValues.plantType}}</p>
                                      <hr>
                                      <p>Days to water:</p>
                                      <form action='#'>
                                          <p>
                                              <label>
                                                <input type='checkbox'  
                                                    {{#if this.dataValues.sunday}}  
                                                    checked='checked'
                                                    {{/if}}
                                                />
                                                <span>Sunday</span>
                                              </label>
                                          </p>
                                          <p>
                                              <label>
                                                <input type='checkbox' 
                                                    {{#if this.dataValues.monday}}  
                                                    checked='checked'
                                                    {{/if}}
                                                />
                                                <span>Monday</span>
                                              </label>
                                          </p>
                                          <p>
                                              <label>
                                                <input type='checkbox' 
                                                    {{#if this.dataValues.tuesday}}  
                                                    checked='checked'
                                                    {{/if}}
                                                />
                                                <span>Tuesday</span>
                                              </label>
                                          </p>
                                          <p>
                                              <label>
                                                <input type='checkbox' 
                                                    {{#if this.dataValues.wednesday}}  
                                                    checked='checked'
                                                    {{/if}}
                                                />
                                                <span>Wednesday</span>
                                              </label>
                                          </p>
                                          <p>
                                              <label>
                                                <input type='checkbox' 
                                                    {{#if this.dataValues.thursday}}  
                                                    checked='checked'
                                                    {{/if}}
                                                />
                                                <span>Thursday</span>
                                              </label>
                                          </p>
                                          <p>
                                              <label>
                                                <input type='checkbox' 
                                                    {{#if this.dataValues.friday}}  
                                                    checked='checked'
                                                    {{/if}}
                                                />
                                                <span>Friday</span>
                                              </label>
                                          </p>
                                          <p>
                                              <label>
                                                <input type='checkbox' 
                                                    {{#if this.dataValues.saturday}}  
                                                    checked='checked'
                                                    {{/if}}
                                                />
                                                <span>Saturday</span>
                                              </label>
                                          </p>
                                          <button class='btn green darken-2 waves-effect waves-light' type='submit' name='action'>Update Watering Days<i class='material-icons right'>add</i></button>
                                          <button id='watered'  data-id='{{this.dataValues.id}}' class='btn green darken-2 waves-effect waves-light' type='submit' name='action'>Watered<i class='material-icons right'>opacity</i></button>
                                      </form>
                                  </div>
                                  {{/each}}
                              </ul>
                            </div>
                            <div class='col s6'>
                              <div class='row'>
                              </div>
                              <div class='row'>
                                <div class='col s2'></div>
                                <div class='col s10'>
                                  <img id='watercan-icon' class='plant-icon hide' src='/images/farming-and-gardening.png' alt='watering can'>
                                </div>
                              </div>
                              <div class='row'>
                                <img class='plant-icon' src='/images/plant.png' alt='plant'>
                              </div>
                            </div>
                          </div>
                        </div>
                    </div>

        </div>
    </div>








