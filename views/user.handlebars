    <div class='container'>
        <div class='row'>

                    <div class='card'>
                        <div class='card-content center'>
                            <h5>My Plants</h5>
                        </div>
                        <div class='card-tabs'>
                            <ul class='tabs z-depth-1 tabs-fixed-width'>
                                {{#each plant}}
                                <li class='tab'><a class='active' href='#{{this.dataValues.nickName}}'>{{this.dataValues.nickName}}</a></li>
                                {{/each}}
                            </ul>
                        </div>
                        <div class='card-content grey lighten-4'>

                          <ul>
                              {{#each plant}}
                              <div id='{{this.dataValues.nickName}}'>                              
                                  <p>Plant Type: {{this.dataValues.plantType}}</p>
                                  <p>Days to water:</p>
                                  <form action='#'>
                                      <p>
                                          <label>
                                             <input type='checkbox'  
                                                {{#if this.dataValues.sunday}}  
                                                checked='checked'
                                                {{/if}}
                                             />
                                            <span>Sunday</span>
                                          </label>
                                      </p>
                                      <p>
                                          <label>
                                            <input type='checkbox' 
                                                {{#if this.dataValues.monday}}  
                                                checked='checked'
                                                {{/if}}
                                            />
                                            <span>Monday</span>
                                          </label>
                                      </p>
                                      <p>
                                          <label>
                                            <input type='checkbox' 
                                                {{#if this.dataValues.tuesday}}  
                                                checked='checked'
                                                {{/if}}
                                            />
                                            <span>Tuesday</span>
                                          </label>
                                      </p>
                                      <p>
                                          <label>
                                            <input type='checkbox' 
                                                {{#if this.dataValues.wednesday}}  
                                                checked='checked'
                                                {{/if}}
                                            />
                                            <span>Wednesday</span>
                                          </label>
                                      </p>
                                      <p>
                                          <label>
                                            <input type='checkbox' 
                                                {{#if this.dataValues.thursday}}  
                                                checked='checked'
                                                {{/if}}
                                            />
                                            <span>Thursday</span>
                                          </label>
                                      </p>
                                      <p>
                                          <label>
                                            <input type='checkbox' 
                                                {{#if this.dataValues.friday}}  
                                                checked='checked'
                                                {{/if}}
                                            />
                                            <span>Friday</span>
                                          </label>
                                      </p>
                                      <p>
                                          <label>
                                            <input type='checkbox' 
                                                {{#if this.dataValues.saturday}}  
                                                checked='checked'
                                                {{/if}}
                                            />
                                            <span>Saturday</span>
                                          </label>
                                      </p>
                                      <button class='btn green darken-2 waves-effect waves-light' type='submit' name='action'>Update Watering Days<i class='material-icons right'>send</i></button>
                                  </form>
                              </div>
                              {{/each}}
                          </ul>
                            
                        </div>
                    </div>

        </div>
    </div>

